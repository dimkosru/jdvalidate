{
    "presets": [
        ["env", {
            "targets": {
                "browsers": ["last 2 versions", "ie >= 10"]
            }
        }]
    ],
    "plugins": [
        "transform-class-properties",
        "transform-object-rest-spread"
    ],
    "env": {
        "test": {
            "plugins": [
                [
                    "istanbul",
                    {
                        "exclude": [
                            "tests",
                            "test-utils"
                        ]
                    }
                ]
            ]
        }
    }
}
